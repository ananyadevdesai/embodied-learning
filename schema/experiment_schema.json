{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Embodied Learning Experiment Schema",
  "description": "Schema for real-world embodied learning experiments",
  "type": "object",
  "required": [
    "experiment_id",
    "timestamp",
    "hardware",
    "sensors",
    "actions",
    "outcome",
    "reward"
  ],
  "properties": {
    "experiment_id": {
      "type": "string",
      "description": "Unique identifier for this experiment (e.g., '0001_balance_bot')"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of when experiment was conducted"
    },
    "contributor": {
      "type": "string",
      "description": "GitHub username or name of contributor"
    },
    "hardware": {
      "type": "object",
      "required": ["platform", "sensors", "actuators"],
      "properties": {
        "platform": {
          "type": "string",
          "description": "Hardware platform (e.g., 'ESP32', 'Arduino Nano', 'Raspberry Pi')"
        },
        "sensors": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of sensors used (e.g., ['MPU6050', 'camera', 'encoder'])"
        },
        "actuators": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of actuators used (e.g., ['DC motor', 'servo', 'stepper'])"
        },
        "cost_usd": {
          "type": "number",
          "minimum": 0,
          "description": "Total hardware cost in USD (approximate)"
        }
      }
    },
    "sensors": {
      "type": "object",
      "description": "Sensor data collected during experiment",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "number"
        }
      }
    },
    "actions": {
      "type": "array",
      "description": "Actions taken during experiment",
      "items": {
        "type": "object",
        "required": ["timestamp", "action_type", "values"],
        "properties": {
          "timestamp": {
            "type": "number",
            "description": "Time offset in seconds from experiment start"
          },
          "action_type": {
            "type": "string",
            "description": "Type of action (e.g., 'motor_command', 'servo_angle')"
          },
          "values": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "description": "Action parameters"
          }
        }
      }
    },
    "outcome": {
      "type": "object",
      "required": ["success", "duration_seconds"],
      "properties": {
        "success": {
          "type": "boolean",
          "description": "Whether the experiment achieved its goal"
        },
        "duration_seconds": {
          "type": "number",
          "minimum": 0,
          "description": "Duration of experiment in seconds"
        },
        "metrics": {
          "type": "object",
          "description": "Additional outcome metrics",
          "additionalProperties": {
            "type": "number"
          }
        },
        "failure_reason": {
          "type": "string",
          "description": "If success is false, reason for failure"
        }
      }
    },
    "reward": {
      "type": "number",
      "description": "Reward signal (can be negative for failures)"
    },
    "notes": {
      "type": "string",
      "description": "Free-form notes about the experiment"
    },
    "failures": {
      "type": "array",
      "description": "List of failures or unexpected behaviors encountered",
      "items": {
        "type": "object",
        "properties": {
          "timestamp": {
            "type": "number",
            "description": "Time offset when failure occurred"
          },
          "description": {
            "type": "string",
            "description": "Description of what went wrong"
          },
          "severity": {
            "type": "string",
            "enum": ["minor", "moderate", "severe"],
            "description": "Severity of the failure"
          }
        }
      }
    }
  }
}

